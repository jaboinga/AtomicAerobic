<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpFragment"
    android:background="@color/colorBackground"
    android:padding="20dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:textColor="@color/colorDarkPink"
        android:textSize="38sp"
        android:textStyle="bold"
        android:layout_above="@id/sign_up_first_name_edit_text"
        />

    <EditText
        android:id="@+id/sign_up_first_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:background="@color/colorLightPink"
        android:hint="@string/first_name_hint"
        android:layout_above="@id/sign_up_last_name_edit_text"
        />

    <EditText
        android:id="@+id/sign_up_last_name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:background="@color/colorLightPink"
        android:hint="@string/last_name_hint"
        android:layout_above="@id/sign_up_email_edit_text"/>

    <EditText
        android:id="@+id/sign_up_email_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:background="@color/colorLightPink"
        android:hint="@string/email_hint"
        android:layout_centerVertical="true"
        />

    <EditText
        android:id="@+id/sign_up_password_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:background="@color/colorLightPink"
        android:hint="@string/password_hint"
        android:layout_below="@id/sign_up_email_edit_text"
        />

    <TextView
        android:id="@+id/already_have_account_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/already_have_an_account"
        android:layout_below="@id/sign_up_password_edit_text"
        android:textColor="@color/colorLightPink"/>

    <TextView
        android:id="@+id/sign_in_log_in_link_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/log_in"
        android:textColor="@color/colorDarkPink"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@id/already_have_account_text_view"
        android:layout_below="@id/sign_up_password_edit_text"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorLightPink"
        android:text="@string/sign_up"
        android:textStyle="bold"
        android:textColor="@color/colorMossGreen"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />


</RelativeLayout>