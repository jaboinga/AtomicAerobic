<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyling">
        <item name="android:background">@color/lightYellow</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
    </style>

    <style name="EditTextStyling">
        <item name="android:background">@color/lightYellow</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="SmallEditTextStyling">
        <item name="android:background">@color/lightYellow</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TitleStyling">
        <item name="android:textColor">@color/ghostWhite</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="SubHeaderStyle">
        <item name="android:textColor">@color/lightYellow</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SmallTextStyle">
        <item name="android:textColor">@color/lightYellow</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SmallLinkStyle">
        <item name="android:textColor">@color/salmon</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BoxStyling">
        <item name="android:background">@color/lightYellow</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">125dp</item>
    </style>

    <style name="BoxLargeTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BoxSmallTextStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:background">@color/lightYellow</item>
    </style>
</resources>
